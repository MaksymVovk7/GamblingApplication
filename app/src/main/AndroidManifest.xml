<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.megawild.roboo">

    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ThirdGameActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SecondBonusGameActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".BonusGameActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SecondGameActivity"
            android:exported="false" />
        <activity
            android:name=".FirstGameActivity"
            android:exported="false" />
        <activity
            android:name=".GamesMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MenuActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FireActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MineActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>