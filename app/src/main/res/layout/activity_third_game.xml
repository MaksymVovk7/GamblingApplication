<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_game2"
    tools:context=".ThirdGameActivity">


    <ImageView
        android:id="@+id/imageViewBtnSpinThirdGame"
        android:layout_width="180dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13"
        app:srcCompat="@drawable/btn_spin" />

    <ImageView
        android:id="@+id/imageViewBtnMinusThirdGame"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toStartOf="@+id/imageView13"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:srcCompat="@drawable/btn_minus" />

    <ImageView
        android:id="@+id/imageViewBtnPlusThirdGame"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:srcCompat="@drawable/btn_plus" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewBtnSpinThirdGame"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBtnPlusThirdGame"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewBtnMinusThirdGame"
        app:layout_constraintTop_toBottomOf="@+id/imageViewWheel"
        app:srcCompat="@drawable/bet_panel1" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bet_panel2" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="@+id/imageView17"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:srcCompat="@drawable/bet_panel3" />

    <ImageView
        android:id="@+id/imageViewBalanceThirdGame"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageViewWheel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/total_win_game2" />

    <TextView
        android:id="@+id/textViewBetThirdGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="1000"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13" />

    <TextView
        android:id="@+id/textViewBalanceThirdGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/text_total"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewBalanceNumThirdGame"
        app:layout_constraintEnd_toEndOf="@+id/textViewBalanceNumThirdGame"
        app:layout_constraintStart_toStartOf="@+id/textViewBalanceNumThirdGame" />

    <TextView
        android:id="@+id/textViewBalanceNumThirdGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/abril_fatface"
        android:text="1000"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBalanceThirdGame"
        app:layout_constraintStart_toStartOf="@+id/imageViewBalanceThirdGame" />

    <TextView
        android:id="@+id/textViewWinThirdGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/text_win"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewWinNumThirdGame"
        app:layout_constraintEnd_toEndOf="@+id/textViewWinNumThirdGame"
        app:layout_constraintStart_toStartOf="@+id/textViewWinNumThirdGame" />

    <TextView
        android:id="@+id/textViewWinNumThirdGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/abril_fatface"
        android:text="1000"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBalanceThirdGame"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBalanceThirdGame" />

    <ImageView
        android:id="@+id/imageViewWheel"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBalanceThirdGame"
        app:srcCompat="@drawable/wheel" />

    <ImageView
        android:id="@+id/imageViewBorderWheel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewWheel"
        app:layout_constraintEnd_toEndOf="@+id/imageViewWheel"
        app:layout_constraintStart_toStartOf="@+id/imageViewWheel"
        app:layout_constraintTop_toTopOf="@+id/imageViewWheel"
        app:srcCompat="@drawable/border_wheel" />
</androidx.constraintlayout.widget.ConstraintLayout>