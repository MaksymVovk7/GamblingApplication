<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_game1"
    tools:context=".FirstGameActivity">


    <ImageView
        android:id="@+id/imageViewBtnSpinGame1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/btn_spin" />

    <ImageView
        android:id="@+id/imageViewSlotsGame1"
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTotalWinGame1"
        app:srcCompat="@drawable/slots_game1" />

    <ImageView
        android:id="@+id/imageViewTotalWinGame1"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSlotsGame1"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSlotsGame1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewSlotsGame1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/total_win_game1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageViewBtnSpinGame1"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBtnPlus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewBtnMinus"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSlotsGame1"
        app:srcCompat="@drawable/bet_panel1" />

    <ImageView
        android:id="@+id/imageViewBtnMinus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/btn_minus" />

    <ImageView
        android:id="@+id/imageViewBtnPlus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/btn_plus" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/bet_panel2" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/bet_panel3" />

    <TextView
        android:id="@+id/textViewBetGame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textColor="@color/white"
        android:fontFamily="@font/abril_fatface"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reels1Game1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewSlotsGame1"
        app:layout_constraintStart_toStartOf="@+id/imageViewSlotsGame1"
        app:layout_constraintTop_toTopOf="@+id/imageViewSlotsGame1">

        <com.megawild.roboo.ImageViewScrollingFirstGame
            android:id="@+id/imageViewIcon1Game1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/robo_icon1_game1" />

        <com.megawild.roboo.ImageViewScrollingFirstGame
            android:id="@+id/imageViewIcon2Game1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewIcon1Game1"
            app:srcCompat="@drawable/robo_icon2_game1" />

        <com.megawild.roboo.ImageViewScrollingFirstGame
            android:id="@+id/imageViewIcon3Game1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewIcon2Game1"
            app:srcCompat="@drawable/robo_icon1_game1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reels2Game1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewSlotsGame1"
        app:layout_constraintStart_toEndOf="@+id/reels1Game1"
        app:layout_constraintTop_toTopOf="@+id/imageViewSlotsGame1"
        app:layout_constraintVertical_bias="1.0">

        <com.megawild.roboo.ImageViewScrollingFirstGame
            android:id="@+id/imageViewIcon4Game1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/robo_icon4_game1" />

        <com.megawild.roboo.ImageViewScrollingFirstGame
            android:id="@+id/imageViewIcon5Game1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewIcon4Game1"
            app:srcCompat="@drawable/robo_icon5_game1" />

        <com.megawild.roboo.ImageViewScrollingFirstGame
            android:id="@+id/imageViewIcon6Game1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewIcon5Game1"
            app:srcCompat="@drawable/robo_icon4_game1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reels3Game1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewSlotsGame1"
        app:layout_constraintStart_toEndOf="@+id/reels2Game1"
        app:layout_constraintTop_toTopOf="@+id/imageViewSlotsGame1"
        app:layout_constraintVertical_bias="1.0">

        <com.megawild.roboo.ImageViewScrollingFirstGame
            android:id="@+id/imageViewIcon7Game1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/robo_icon2_game1" />

        <com.megawild.roboo.ImageViewScrollingFirstGame
            android:id="@+id/imageViewIcon8Game1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewIcon7Game1"
            app:srcCompat="@drawable/robo_icon3_game1" />

        <com.megawild.roboo.ImageViewScrollingFirstGame
            android:id="@+id/imageViewIcon9Game1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewIcon8Game1"
            app:srcCompat="@drawable/robo_icon2_game1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textViewTotalGame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/text_total"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewNumTotalGame1"
        app:layout_constraintEnd_toEndOf="@+id/textViewNumTotalGame1"
        app:layout_constraintStart_toStartOf="@+id/textViewNumTotalGame1" />

    <TextView
        android:id="@+id/textViewNumTotalGame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/abril_fatface"
        android:text="1000"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSlotsGame1"
        app:layout_constraintStart_toStartOf="@+id/imageViewTotalWinGame1" />

    <TextView
        android:id="@+id/textViewWinGame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/text_win"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewNumWinGame1"
        app:layout_constraintEnd_toEndOf="@+id/textViewNumWinGame1"
        app:layout_constraintStart_toStartOf="@+id/textViewNumWinGame1" />

    <TextView
        android:id="@+id/textViewNumWinGame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/abril_fatface"
        android:text="1000"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSlotsGame1"
        app:layout_constraintEnd_toEndOf="@+id/imageViewTotalWinGame1" />

</androidx.constraintlayout.widget.ConstraintLayout>