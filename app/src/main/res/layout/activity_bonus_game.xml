<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bonus_game"
    tools:context=".BonusGameActivity">

    <ImageView
        android:id="@+id/imageViewBtnSpinBonusGame"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/btn_spin" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewBtnSpinBonusGame"
        app:layout_constraintEnd_toStartOf="@+id/imageViewBtnPlusBonusGame"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewBtnMinusBonusGame"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSlot3BonusGame"
        app:srcCompat="@drawable/bet_panel1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/bet_panel2" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/bet_panel3" />

    <ImageView
        android:id="@+id/imageViewBtnMinusBonusGame"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/btn_minus" />

    <ImageView
        android:id="@+id/imageViewBtnPlusBonusGame"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/btn_plus" />

    <ImageView
        android:id="@+id/imageViewSlot1BonusGame"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSlot3BonusGame"
        app:layout_constraintEnd_toStartOf="@+id/imageViewSlot2BonusGame"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBonusBal"
        app:srcCompat="@drawable/slot_bonus" />

    <ImageView
        android:id="@+id/imageViewSlot2BonusGame"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewSlot1BonusGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewSlot1BonusGame"
        app:layout_constraintTop_toTopOf="@+id/imageViewSlot1BonusGame"
        app:srcCompat="@drawable/slot_bonus" />

    <ImageView
        android:id="@+id/imageViewSlot3BonusGame"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageViewSlot4BonusGame"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSlot1BonusGame"
        app:srcCompat="@drawable/slot_bonus" />

    <ImageView
        android:id="@+id/imageViewSlot4BonusGame"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewSlot3BonusGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewSlot3BonusGame"
        app:layout_constraintTop_toTopOf="@+id/imageViewSlot3BonusGame"
        app:srcCompat="@drawable/slot_bonus" />

    <TextView
        android:id="@+id/textViewBetBonusGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="1000"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageViewIcon1BonusGame"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewSlot1BonusGame"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSlot1BonusGame"
        app:layout_constraintStart_toStartOf="@+id/imageViewSlot1BonusGame"
        app:layout_constraintTop_toTopOf="@+id/imageViewSlot1BonusGame"
        app:srcCompat="@drawable/robo_icon_unknown" />

    <ImageView
        android:id="@+id/imageViewIcon2BonusGame"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewSlot2BonusGame"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSlot2BonusGame"
        app:layout_constraintStart_toStartOf="@+id/imageViewSlot2BonusGame"
        app:layout_constraintTop_toTopOf="@+id/imageViewSlot2BonusGame"
        app:srcCompat="@drawable/robo_icon_unknown" />

    <ImageView
        android:id="@+id/imageViewIcon3BonusGame"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewSlot4BonusGame"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSlot4BonusGame"
        app:layout_constraintStart_toStartOf="@+id/imageViewSlot4BonusGame"
        app:layout_constraintTop_toTopOf="@+id/imageViewSlot4BonusGame"
        app:srcCompat="@drawable/robo_icon_unknown" />

    <ImageView
        android:id="@+id/imageViewIcon4BonusGame"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewSlot3BonusGame"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSlot3BonusGame"
        app:layout_constraintStart_toStartOf="@+id/imageViewSlot3BonusGame"
        app:layout_constraintTop_toTopOf="@+id/imageViewSlot3BonusGame"
        app:srcCompat="@drawable/robo_icon_unknown" />

    <ImageView
        android:id="@+id/imageViewBonusBal"
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSlot1BonusGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/total_win_game2" />

    <TextView
        android:id="@+id/textViewBalanceBonusGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/text_total"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewBalanceNumBonusGame"
        app:layout_constraintEnd_toEndOf="@+id/textViewBalanceNumBonusGame"
        app:layout_constraintStart_toStartOf="@+id/textViewBalanceNumBonusGame" />

    <TextView
        android:id="@+id/textViewBalanceNumBonusGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/abril_fatface"
        android:text="1000"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBonusBal"
        app:layout_constraintStart_toStartOf="@+id/imageViewBonusBal" />

    <TextView
        android:id="@+id/textViewWinBonusGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/text_win"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewWinNumBonusGame"
        app:layout_constraintEnd_toEndOf="@+id/textViewWinNumBonusGame"
        app:layout_constraintStart_toStartOf="@+id/textViewWinNumBonusGame" />

    <TextView
        android:id="@+id/textViewWinNumBonusGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/abril_fatface"
        android:text="1000"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBonusBal"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBonusBal" />
</androidx.constraintlayout.widget.ConstraintLayout>